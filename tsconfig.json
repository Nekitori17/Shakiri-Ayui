{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "commonjs",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": false,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "esnext",
  },
  "include": ["src/**/*"]
}